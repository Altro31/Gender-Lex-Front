datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  email     String    @id()
  createdAt DateTime  @default(now())
  Analyses  Request[]
}

model Request {
  id           String   @id() @default(cuid())
  originalText String
  modifiedText String
  conclusion   String
  userEmail    String?
  User         User?    @relation(fields: [userEmail], references: [email], onDelete: SetNull)
  createdAt    DateTime @default(now())
  Analysis     Json
}

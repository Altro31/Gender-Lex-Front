---
import SidebarButton from "@/components/sidebar/SidebarButton.astro"
import SidebarHistoryAction from "@/components/sidebar/SidebarHistoryAction.astro"
import { Clock as ClockIcon } from "lucide-astro"
---

<SidebarHistoryAction server:defer />
<astro-sidebar-history
    transition:persist="astro-sidebar-history"
    data-authorized={false}
    class="data-[authorized=false]:*:hidden"
>
    <SidebarButton to="/history" label="Historial">
        <ClockIcon class="size-4" />
    </SidebarButton>
</astro-sidebar-history>

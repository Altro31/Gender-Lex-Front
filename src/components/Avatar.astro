---
import type { ComponentProps } from "astro/types"
import { Image } from "astro:assets"

type Props = {
    useNativeImg?: boolean
} & ComponentProps<typeof Image>

const {
    height = 40,
    width = 40,
    class: classStr,
    useNativeImg,
    ...rest
} = Astro.props
const ImgComp = (useNativeImg ? "img" : Image) as typeof Image
---

<ImgComp
    {...rest}
    height={height}
    width={width}
    class:list={["rounded-full cursor-pointer", classStr]}
/>

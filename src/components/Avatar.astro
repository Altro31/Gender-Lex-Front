---
import { cn } from "@/lib/utils"
import type { ComponentProps } from "astro/types"
import { Image } from "astro:assets"

type Props = ComponentProps<typeof Image>

const { height = 40, width = 40, class: classStr, ...rest } = Astro.props
---

<Image
    {...rest}
    height={height}
    width={width}
    class:list={["rounded-full cursor-pointer", classStr]}
/>

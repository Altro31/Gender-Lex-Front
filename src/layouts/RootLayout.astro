---
import "@/base.css"
import Theme from "@/components/Theme.astro"
import Sidebar from "@/components/sidebar"
import { buildPageTitle } from "@/lib/text/build-page-title"
import { ClientRouter } from "astro:transitions"

interface Props {
    title?: string
    withoutTransitionsAPI?: boolean
}
const { title, withoutTransitionsAPI = false } = Astro.props
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{buildPageTitle(title)}</title>
        {!withoutTransitionsAPI && <ClientRouter />}
        {
            import.meta.env.DEV && (
                <script
                    src="https://unpkg.com/react-scan/dist/auto.global.js"
                    is:inline
                />
            )
        }
    </head>
    <body class="min-h-screen">
        <Theme server:defer />
        <section class="flex h-screen">
            <Sidebar transition:persist />
            <main class="flex-1 overflow-auto max-h-screen">
                <slot> No Content Provided</slot>
            </main>
        </section>
    </body>
</html>

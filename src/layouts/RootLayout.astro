---
import "@/base.css"
import Theme from "@/components/Theme.astro"
import Sidebar from "@/components/sidebar"
import { buildPageTitle } from "@/lib/text/build-page-title"
import { getPreferredThemeFromAstroCookies } from "@/lib/theme"
import { ClientRouter } from "astro:transitions"

interface Props {
    title?: string
    withTransitionsAPI?: boolean
}
const { title, withTransitionsAPI } = Astro.props

const theme = getPreferredThemeFromAstroCookies(Astro.cookies)
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{buildPageTitle(title)}</title>
        {withTransitionsAPI && <ClientRouter />}
    </head>
    <body class="min-h-screen" class:list={[{ dark: theme === "dark" }]}>
        <Theme />
        <section class="flex h-screen">
            <Sidebar />
            <main class="flex-1 overflow-auto max-h-screen">
                <slot> No Content Provided</slot>
            </main>
        </section>
    </body>
</html>

{
    import.meta.env.DEV && (
        <script
            src="https://unpkg.com/react-scan/dist/auto.global.js"
            is:inline
        />
    )
}

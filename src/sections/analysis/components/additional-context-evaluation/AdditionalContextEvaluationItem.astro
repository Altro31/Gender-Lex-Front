---
import CircularProgress from "@/components/CircularProgress.astro"
import { getBiasColor } from "@/sections/analysis/utils/get-bias-color"
import type { AdditionalContextEvaluationItemType } from "~types/gender-lex"

interface Props {
    data: AdditionalContextEvaluationItemType
    title: string
}

const { data, title } = Astro.props
---

<div class="flex-col text-center max-w-60">
    <CircularProgress
        progress={data.influencePercentage * 100}
        label
        strokeWidth={16}
        size={200}
        class={getBiasColor(data.influencePercentage)}
    />
    <h3 class="text-center font-semibold">{title}</h3>
    <p class="text-sm text-secondary-foreground/80">
        {data.explanation}
    </p>
</div>

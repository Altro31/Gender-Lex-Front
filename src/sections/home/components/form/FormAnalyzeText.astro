---
import FormAnalyzeTextInput from "./FormAnalyzeTextInput.vue"
---

<FormAnalyzeTextInput />

<script>
    import { $analyzeText } from "@/utils/stores/analyle-text"

    const text: HTMLInputElement | null =
        document.querySelector("#analyze-text")
    text?.addEventListener("input", (e) => {
        const target = e.target as HTMLInputElement
        $analyzeText.set(target.value)
    })
</script>

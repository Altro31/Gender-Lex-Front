---
import { Card } from "@/components/ui/card"
import Form from "./Form.vue"
import { MailIcon, TextIcon, UserIcon, ZapIcon } from "lucide-vue-next"
import { actions } from "astro:actions"

const prompts = [
    {
        icon: UserIcon,
        text: "Analizar publicaciones en busca de contenido sesgado",
    },
    {
        icon: MailIcon,
        text: "Mostrar cuáles términos influyen en este tipo de contenido",
    },
    {
        icon: TextIcon,
        text: "Dar alternativas para esos términos encontrados",
    },
    { icon: ZapIcon, text: "Soporta subida de archivos pdf, word, ..." },
]
---

<div class="size-full grid place-content-center">
    <div class="w-fit">
        <div class="mb-8 space-y-2">
            <h1
                class="p-1 text-4xl font-bold bg-gradient-to-r from-black via-fuchsia-600/80 via-65% to-75% to-violet-500 bg-clip-text text-transparent"
            >
                <span>Hola, bienvenido a GenderLex</span>
                <br />
                <span>¿Qué puede de hacer?</span>
            </h1>
        </div>
    </div>
    <div class="mb-8 flex gap-4 flex-wrap justify-center">
        {
            prompts.map(({ icon: Icon, text }) => (
                <Card class="cursor-pointer p-4 transition-colors hover:bg-gray-50 w-48">
                    <div class="flex flex-col justify-between h-full gap-4">
                        <span class="text-sm">{text}</span>
                        <Icon class="h-5 w-5 text-gray-500" />
                    </div>
                </Card>
            ))
        }
    </div>
    <Form client:load />
</div>

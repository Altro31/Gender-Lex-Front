---
import { Card } from "@/components/ui/card"
import RefreshButton from "@/sections/home/components/RefreshButton.astro"
import {
    ChartColumn as ChartColumnIcon,
    FileText as FileTextIcon,
    RefreshCw as RefreshCwIcon,
    SearchCode as SearchCodeIcon,
} from "lucide-astro"
import FormContainer from "./components/form/FormContainer.astro"

const prompts = [
    {
        icon: SearchCodeIcon,
        text: "Analizar texto en busca de contenido sesgado",
        ready: true,
    },
    {
        icon: ChartColumnIcon,
        text: "Mostrar cuáles términos influyen en este tipo de contenido",
        ready: true,
    },
    {
        icon: RefreshCwIcon,
        text: "Dar alternativas para esos términos encontrados",
        ready: true,
    },
    {
        icon: FileTextIcon,
        text: "Soporta subida de archivos pdf, word, ...",
        ready: false,
    },
]
---

<div
    class="size-full grid place-content-center group-has-[#theme:checked]:bg-red-500"
>
    <div class="w-fit">
        <div class="mb-8 space-y-2">
            <h1
                class="p-1 text-4xl font-bold bg-gradient-to-r from-primary via-fuchsia-600/80 via-65% to-75% to-violet-500 bg-clip-text text-transparent"
            >
                <span>Hola, bienvenido a GenderLex</span>
                <br />
                <span>¿Qué puede hacer?</span>
            </h1>
        </div>
    </div>
    <div
        class="mb-8 flex gap-4 flex-wrap justify-center"
        transition:name="info"
    >
        {
            prompts.map(({ icon: Icon, text, ready }) => (
                <Card
                    data-ready={ready}
                    className="data-[ready=false]:bg-muted  cursor-pointer p-4 transition-colors hover:bg-muted/80 w-48"
                >
                    <div class="flex flex-col justify-between h-full gap-4">
                        <span class="text-sm">{text}</span>
                        <div class="flex justify-between">
                            <Icon class="h-5 w-5 text-gray-500" />
                            {!ready && (
                                <span class="bg-dev rounded-full text-white p-1 px-2 text-sm">
                                    dev
                                </span>
                            )}
                        </div>
                    </div>
                </Card>
            ))
        }
    </div>
    <RefreshButton />
    <FormContainer />
</div>
